{% layout "server/layouts/base.liquid" %}

{% block content %}
<div class="eventlist">
  <div>
    <h1 class="h1">All events</h1>
    <ul>
      {% for e in events %}
      {% assign title = "" %}
      {% if e.event.title_en != "" %}
      {% assign title = e.event.title_en %}
      {% elsif e.event.title_nl != "" %}
      {% assign title = e.event.title_nl %}
      {% endif %}
      {% if title != "" %}
      <li class="search-result">
        <a href="/event/{{ e.event.uuid }}">
          {{ title }}
        </a>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}